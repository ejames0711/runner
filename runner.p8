function _init()
	plyr = {}
	plyr.st="walk"
	plyr.spr=1
	plyr.timer=0
	plyr.x=20
	plyr.y=85
	plyr.vy=0
	
	gravity=0.4
	
	ground={}
	ground.x=0
	ground.spd=4
	
	hill={} 
	hill.x=0
	hill.spd=2
	
	mnt={}
	mnt.x=0
	mnt.spd=1
	
	bckgrnd={ground,hill,mnt}
	
	sb = {}
	sb.spr=6
	sb.timer=0
	sb.spd=2
	sb.x=90
	sb.y=85
	
 snowx={}
 snowy={}
 snowspd={}
 
 init_snow()
end

function _update()
	if collision(plyr,sb) then
		sfx(0)
	end
	
	physics()
	anim_plyr()
	
	sb.x-=sb.spd
	anim_w_frames(sb,6,8,5)
	
	for k,v in pairs(bckgrnd) do
		upd_bckgrnd(v)
	end
	
	animate_snow()
end

function _draw()
	cls(1)
	draw_bckgrnd(68,1,mnt,5,16)
	draw_bckgrnd(50,2,hill,10,16)
	draw_bckgrnd(0,0,ground)
	snow()
	spr(plyr.spr,plyr.x,plyr.y)
	spr(sb.spr,sb.x,sb.y)
end
