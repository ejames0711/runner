--state

function play_game()
	if collision(plyr,sb) then
		game.state="end"
	end
	physics()
	anim_plyr()
	anim_sb()
	
	for k,v in pairs(bckgrnd) do
		upd_bckgrnd(v)
	end
end

function end_game()
	plyr.spr = 0
	sb.spr = 0
end


